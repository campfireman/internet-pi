# {{ ansible_managed }}
---
version: '3'

services:
  homeassistant:
    container_name: homeassistant
    image: "ghcr.io/home-assistant/home-assistant:stable"
    volumes:
      - {{ config_dir }}/home-assistant/config:/config
      - /etc/localtime:/etc/localtime:ro
    restart: unless-stopped
    ports:
      - 8123:8123/tcp
    devices:
      - /dev/ttyUSB0:/dev/ttyUSB0